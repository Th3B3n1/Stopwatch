<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<VBox xmlns:fx="http://javafx.com/fxml" spacing="10" alignment="center" fx:controller="hu.petrik.stopwatch.Controller">
    <Text fx:id="timerDisplay" text="00:00:00.000" style="-fx-font-size: 24;" />
    <Button text="Start" onAction="#startTimer" />
    <Button text="Stop" onAction="#stopTimer" />
    <Button fx:id="lapResetButton" text="Reset" onAction="#handleLapOrReset" />
    <ListView fx:id="lapList" prefHeight="200" />
</VBox>
